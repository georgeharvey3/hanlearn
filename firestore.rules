rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Words collection - read-only for authenticated users
    match /words/{wordId} {
      allow read: if request.auth != null;
      allow write: if false; // Admin only via Admin SDK
    }

    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // UserWords subcollection
      match /userWords/{wordId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Chengyus - read-only for authenticated users
    match /chengyus/{chengyuId} {
      allow read: if request.auth != null;
      allow write: if false; // Admin only via Admin SDK
    }
  }
}
